{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "description": "The command that triggers the action."
    },
    "action": {
      "type": "string",
      "enum": [
        "move",
        "stop",
        "grab",
        "drop"
      ]
    },
    "target": {
      "type": "string",
      "pattern": "^[a-z]+(_[a-z]+)*$"
    },
    "effect": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Represents the impact or intensity of the action as a percentage."
    }
  },
  "required": [
    "command",
    "action"
  ]
}