{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "description": "Triggers specified actions."
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "move",
              "stop",
              "grab",
              "drop"
            ],
            "description": "Specifies the action type."
          },
          "intent": {
            "type": "string",
            "pattern": "^[a-z]+(_[a-z]+)*$",
            "description": "Defines the action's purpose, such as 'to_relocate'."
          },
          "target": {
            "type": "string",
            "pattern": "^[a-z]+(_[a-z]+)*$",
            "description": "Identifies the action's target, if applicable."
          },
          "effect": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Quantifies the action's impact on a scale of 0 to 1, if applicable."
          }
        },
        "required": [
          "action",
          "intent"
        ],
        "additionalProperties": false
      },
      "description": "Enumerates actions to be executed."
    }
  },
  "required": [
    "command",
    "actions"
  ],
  "additionalProperties": false
}