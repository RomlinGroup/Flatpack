{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "description": "Triggers specified actions."
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "NAVIGATE",
              "HALT",
              "RETRIEVE",
              "DEPOSIT",
              "INTERACT",
              "REPORT"
            ],
            "description": "Specifies the action type."
          },
          "description": {
            "type": "string",
            "description": "Provides a detailed explanation of the action's purpose and execution details, enhancing clarity and operational context."
          },
          "intensity": {
            "type": [
              "null",
              "number"
            ],
            "minimum": 0,
            "maximum": 1,
            "description": "Sets action intensity on a 0 (minimum) to 1 (maximum) scale, if applicable."
          },
          "purpose": {
            "type": "string",
            "description": "Defines the action's purpose, such as 'to_relocate'."
          },
          "target": {
            "type": [
              "string",
              "null"
            ],
            "description": "Identifies the action's target, if applicable."
          },
          "value": {
            "type": [
              "array",
              "number",
              "string"
            ],
            "description": "Specifies the input value or setting for the action, if applicable."
          }
        },
        "required": [
          "action",
          "description",
          "purpose"
        ],
        "additionalProperties": false
      },
      "description": "Enumerates actions to be executed."
    }
  },
  "required": [
    "command",
    "actions"
  ],
  "additionalProperties": false
}